{
    "$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "name": "Primary",
                    "slug": "primary",
                    "color": "var(--tj-color--main)"
                },
                {
                    "name": "Secondary",
                    "slug": "secondary",
                    "color": "var(--tj-color--surface)"
                },
                {
                    "name": "Tertiary",
                    "slug": "tertiary",
                    "color": "#E0E0E0"
                },
                {
                    "name": "Foreground",
                    "slug": "foreground",
                    "color": "var(--tj-color--fg)"
                },
                {
                    "name": "Background",
                    "slug": "background",
                    "color": "var(--tj-color--bg-body)"
                },
                {
                    "name": "Secondary Background",
                    "slug": "secondary-background",
                    "color": "var(--tj-color--bg-gradient)"
                }
            ],
            "gradients": [
                {
                    "slug": "gradient-1",
                    "gradient": "linear-gradient(to bottom, #001756 0%, #78217c 100%)",
                    "name": "Gradient Sample"
                }
            ]
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "slug": "heading",
                    "name": "Montserrat",
                    "fontFamily": "\"Montserrat\", sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-300.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-regular.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-500.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-600.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-700.woff22"
                            ]
                        }                        
                    ]
                },
                {
                    "slug": "content",
                    "name": "Montserrat",
                    "fontFamily": "\"Montserrat\", sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-300.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-regular.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-500.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-600.woff22"
                            ]
                        },
                        {
                            "fontFamily": "Montserrat",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:.\/assets\/fonts\/montserrat\/montserrat-v26-latin-700.woff22"
                            ]
                        }                        
                    ]
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "slug": "xs",
                    "name": "Extra Small",
                    "fluid": false
                },
                {
                    "size": "1rem",
                    "slug": "base",
                    "name": "Base",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    }
                },
                {
                    "size": "1.25rem",
                    "slug": "s",
                    "name": "Small",
                    "fluid": false
                },
                {
                    "size": "1.5rem",
                    "slug": "m",
                    "name": "Medium",
                    "fluid": false
                },
                {
                    "size": "2rem",
                    "slug": "l",
                    "name": "Large",
                    "fluid": {
                        "min": "1.1rem",
                        "max": "2rem"
                    }
                },
                {
                    "size": "2.75rem",
                    "slug": "xl",
                    "name": "Extra Large",
                    "fluid": {
                        "min": "1.5rem",
                        "max": "2.75rem"
                    }
                },
                {
                    "size": "2rem",
                    "slug": "d-s",
                    "name": "Display Small",
                    "fluid": {
                        "min": "1.5rem",
                        "max": "2rem"
                    }
                },
                {
                    "size": "2.25rem",
                    "slug": "d-m",
                    "name": "Display Medium",
                    "fluid": {
                        "min": "1.6255rem",
                        "max": "2.25rem"
                    }
                },
                {
                    "size": "2.5rem",
                    "slug": "d-l",
                    "name": "Display Large",
                    "fluid": {
                        "min": "1.75rem",
                        "max": "2.5rem"
                    }
                },
                {
                    "size": "2.75rem",
                    "slug": "d-xl",
                    "name": "Display Extra Large",
                    "fluid": {
                        "min": "1.875rem",
                        "max": "2.75rem"
                    }
                }
            ]
        },
        "layout": {
            "contentSize": "925px",
            "wideSize": "var(--tj-container)"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "spacingScale": {
                "operator": "*",
                "increment": 2,
                "steps": 6,
                "mediumStep": 1,
                "unit": "rem"
            }
        },
        "shadow": {
            "defaultPresets": true
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--foreground)",
            "link": "var(--wp--preset--color--secondary)"
        },
        "spacing": {
            "padding": {
                "left": "var(--wp--preset--spacing--50)",
                "right": "var(--wp--preset--spacing--50)"
            },
            "blockGap": "1rem"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--content)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.7"
        },
        "elements": {
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--foreground)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "lineHeight": 1.3
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "typography": {
                        "textDecoration": "none"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--l)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--m)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--s)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--base)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xs)"
                }
            },
            "button": {
                "border": {
                    "radius": "4px",
                    "color": "var(--wp--preset--color--secondary)",
                    "style": "solid",
                    "width": "2px"
                },
                "color": {
                    "background": "var(--wp--preset--color--secondary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xs)",
                    "fontWeight": 600
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--40)",
                        "left": "var(--wp--preset--spacing--50)",
                        "right": "var(--wp--preset--spacing--50)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontSize": "0.67rem"
                },
                "css": "& {text-align:center;opacity:.5;}"
            }
        },
        "blocks": {
            "core\/post-content": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--50)"
                },
                "elements": {
                    "heading": {
                        "spacing": {
                            "margin": {
                                "top": "2rem",
                                "bottom": "1rem"
                            }
                        }
                    },
                    "link": {
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline"
                            }
                        }
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        },
        {
            "area": "uncategorized",
            "name": "breadcrumb",
            "title": "Breadcrumb"
        }
    ],
    "customTemplates": [
        {
            "name": "gutenberg-page",
            "title": "Gutenberg Page",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "wp-custom-template-documentation",
            "title": "Documentation",
            "postTypes": [
                "page",
                "post"
            ]
        }
    ]
}